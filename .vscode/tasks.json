{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Random Deploy: Once",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/random-deploy.js",
        "--once"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Random Deploy: Continuous",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/random-deploy.js",
        "--continuous"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "problemMatcher": [],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Random Deploy: Dry Run",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/random-deploy.js",
        "--once",
        "--dry-run"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Random Deploy: Specific Components",
      "type": "shell",
      "command": "node",
      "args": [
        "${workspaceFolder}/scripts/random-deploy.js",
        "--components",
        "${input:componentNames}"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ],
  "inputs": [
    {
      "id": "componentNames",
      "type": "promptString",
      "description": "Enter component names (comma-separated)",
      "default": "AccountHandler,ParkService"
    }
  ]
}
